<div class="col-md-2">
    <div class="progress">
        <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:{{ percentToNewLevel }}%">
            {{ xp }} XP
        </div>
        LEVEL {{ level }}
    </div>
</div>

<div class="col-md-2">

    <div class="progress">
        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:{{ percentMana }}%">
            {{ mana }} MANA
        </div>
    </div>
</div>

<div class="col-md-2">

    <div class="progress">
        <div class="progress-bar progress-bar-danger progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:{{ percentHealth }}%">

        </div>
        {{ health }} HEALTH
    </div>
</div>
<div class="col-md-1">
    <span style="color: yellow; margin-top: 15px; display: inline-block; font-weight: bold">{{ gold }}</span>
    <img src="assets/coin.gif" style="width: 26px;">
</div>
