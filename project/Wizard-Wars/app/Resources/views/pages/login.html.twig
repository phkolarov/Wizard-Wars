{% extends 'base.html.twig' %}



{% block body %}
<div class="container" id="login_wrapper">
    <div class="row">
        <div class="col-md-3 col-md-offset-2 col-centered">
            <div class="">
                {#<div class="panel-heading">Login</div>#}
                <div class="panel-body">
                    <form class="form-horizontal" role="form" method="POST" action="{{ path('security_login_check') }}">
                        {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData) }}
                        </div>
                        {% endif %}

                        <div class="form-group">
                            <label for="email" class="col-md-6 ">E Ö¾ MAIL ADDRESS</label>

                            <div class="col-md-12">
                                <input id="email" type="email" class="form-control" name="_email" value="{{ last_username }}">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="col-md-6">PASSWORD</label>

                            <div class="col-md-12">
                                <input id="password" type="password" class="form-control" name="_password">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fa fa-btn fa-sign-in"></i> Login
                                </button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}