{% extends 'base.html.twig' %}


{% block body %}
    <div class="container" id="login_wrapper">
        <div class="row">
            <div class="col-md-3 col-md-offset-2 col-centered">
                <div class="">
                    <div class="panel-body">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        <div class="form_group">
                            <div class="col-md-12" style="color: orange; font-size: 30px; text-align: center">
                                REGISTER
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-12">
                                {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form_group">
                            <div class="col-md-12">
                                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form_group">
                            <div class="col-md-12">
                                {{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form_group">
                            <div class="col-md-12">
                                {{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12" style="margin-top:5px; margin-left: 15px">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fa fa-btn fa-user"></i> Register
                                </button>
                                <a type="submit" href="{{ path('login') }}" class="btn btn-warning">
                                    <i class="fa fa-btn fa-sign-in"></i> Login
                                </a>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}